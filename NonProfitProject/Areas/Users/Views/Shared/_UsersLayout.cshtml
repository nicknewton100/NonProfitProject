@{
    Layout = "_Layout";
    ViewData["Title2"] = "Users";
    @using Microsoft.AspNetCore.Identity;

}

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/dark-mode-switch.js"></script>
    <script src="https://kit.fontawesome.com/deab61ee00.js" crossorigin="anonymous"></script>
}


<!Doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
          <link rel="stylesheet" href="~/css/dark-mode.css" />

</head>
<body>
    <!--TOP NAV FOR USERE VIEW-->
    <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="darkSwitch" />
                <label class="custom-control-label" for="darkSwitch">Dark Mode</label>
            </div>
            <div></div>
            <div class="text-right">
                <form method="post" asp-area="" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="btn btn-dark">Logout</button>
                </form>
            </div>
        </div>
    </div>
    <!--SIDE NAV FOR USERE VIEW-->
    <div class="text-white bg-dark" style="width: 200px; height: 100%; overflow-x: hidden; position: fixed; z-index: 1; top: 0; left: 0; ">
        <ul class="nav nav-pills flex-column list-unstyled">
            <li class="nav-item">
                <a href="#" class="nav-link text-white">
                    <img src="~/img/NonPawFitAnimalRescue_2.png" alt="Bank'd Tech Solutions" height="50" />
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Main Dashboard</a>
            </li>
            <li class="dropdown-divider"></li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Users" asp-controller="Event" asp-action="Index">Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Users" asp-controller="DonationHistory" asp-action="Index">My Donations</a>
            </li>
            <li class="dropdown-divider"></li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Users" asp-controller="Profile" asp-action="Index">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Users" asp-controller="Membership" asp-action="Index">Membership</a>
            </li>

        </ul>
    </div>

    <div class="main" style="padding: 0 0 5rem 5rem; ">
        @RenderBody()
    </div>

    <footer class="footer text-muted">
        <div class="container text-right">
            &copy; 2021 - BANK'D Tech Solutions - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>