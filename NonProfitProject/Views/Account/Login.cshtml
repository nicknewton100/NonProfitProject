@model NonProfitProject.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["Title2"] = "Non-Paw-Fit Animal Rescue";
    Layout = "_HomePage";
}

<style>
    .bg-image {
        background-position:center;
        background-repeat: no-repeat;
        background-size: cover;
        max-height: 90rem;
        position:fixed;
    }
</style>

<img class="img-fluid bg-image" src="~/img/AnimalPics/pexels-johann-1254140.jpg" />

<div class="container">
    <div><br /><br /><br /><br /></div>
    <div class="row justify-content-end" style="margin-right: 4rem; padding-top: 1rem;">
        <div class="card col-4">
            <div class="card-body">
                <h1>@ViewData["Title"]</h1>
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post" asp-action="LogIn" asp-route-returnUrl=" ">
                    <div class="row">
                        <div class="col-auto">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="font-size:x-large;">
                        <div class="col-auto"><label>Email or Username: </label></div>
                        <div class="col-auto">
                            <input asp-for="Username" class="form-control" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-auto" >
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="font-size:x-large;">
                        <div class="col-auto"><label>Password: </label></div>
                        <div class="col-auto">
                            <input id="password" asp-for="Password" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-auto">
                            <input type="checkbox" name="ShowPassword" onchange="document.getElementById('password').type = this.checked ? 'text' : 'password'">
                            <label for="ShowPassword"> Show Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-auto">
                            <input type="checkbox" title="Remember Me" asp-for="RememberMe" />  <label>Remember Me</label>
                        </div>
                    </div>
                    <div class="form-group row" style="font-size:x-large;">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-lg btn-primary">Log In</button>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-auto">
                            <p>
                                Not registered?
                                <a asp-action="Register">Register as a new user</a>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>